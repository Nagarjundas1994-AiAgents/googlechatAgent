# API Keys
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key

# GCP Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_FILE=path_to_service_account_json

# Vector Database Configuration
# Choose one of the following vector database options

# Option 1: Vertex AI Vector Search
VECTOR_DB_TYPE=vertex_ai
VECTOR_INDEX_NAME=your_vector_index_name

# Option 2: Pinecone
# VECTOR_DB_TYPE=pinecone
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=your_pinecone_index_name

# Option 3: Weaviate
# VECTOR_DB_TYPE=weaviate
# WEAVIATE_URL=your_weaviate_url
# WEAVIATE_API_KEY=your_weaviate_api_key

# Application Settings
EMBEDDING_MODEL=text-embedding-ada-002  # OpenAI embedding model
# EMBEDDING_MODEL=models/embedding-001  # Google Gemini embedding model
LLM_MODEL=gpt-3.5-turbo  # OpenAI LLM model
# LLM_MODEL=gemini-pro  # Google Gemini model

# Crawler Settings
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_DOMAIN=50

# Storage Settings
GCS_BUCKET_NAME=your_gcs_bucket_name

# Application Settings
DEBUG=False